<div class="container col-6-offset-3">

  <h1>New review for <%=  @restaurant.name %></h1>
  <div>
    <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: (0..5) %>
    <%= f.submit "Add the Review", class: "btn btn-primary" %>
    <% end %>
    <div>
      <%= link_to 'Cancel', restaurants_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>

